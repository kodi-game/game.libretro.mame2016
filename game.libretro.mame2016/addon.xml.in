<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.mame2016"
		name="Arcade (MAME 2016)"
		version="0.174.0.6"
		provider-name="MAMEdev">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>zip|chd|7z|cmd</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Arcade (MAME 2016) 0.174</summary>
		<description lang="en_GB">Late 2016 version of MAME (0.174) for libretro. Compatible with MAME 0.174 sets.

Supported files: .zip, .chd, .7z, .cmd</description>
		<license>GPLv2+</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.mame2016</source>
	</extension>
</addon>
